import cv2


def get_image_info(image):
    print(type(image))  
    print(image.shape)  ##(高度,宽度,像素通道)
    print(image.size)   ##总的像素数据  = 高度 * 宽度 * 像素通道
    print(image.dtype)  ##每个像素点有n个通道 每个通道所占的位数 uint8 无符号的int8位


src = cv2.imread("C:\\Users\\Administrator\\Desktop\\1.jpg")
cv2.namedWindow("input image",cv2.WINDOW_AUTOSIZE);
cv2.imshow("input image",src);
get_image_info(src)
cv2.waitKey(0);
cv2.destroyAllWindows();
